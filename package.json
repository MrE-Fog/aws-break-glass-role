{
  "name": "aws-break-glass-role",
  "description": "Create a break glass role for emergency use in order to limit production console access. Configure automatic alerts and logging of activities in the role to secure its use in production environments.",
  "version": "1.6.3",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "author": {
    "name": "Steven Guggenheimer",
    "email": "sguggenh@amazon.com",
    "url": "https://github.com/smguggen"
  },
  "contributors": [
    {
      "name": "Ryan Sonshine",
      "email": "ryansonshine@users.noreply.github.com",
      "url": "https://github.com/ryansonshine"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/aws-break-glass-role"
  },
  "keywords": [
    "aws",
    "breakglassrole",
    "cdk"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc -w",
    "test": "jest --ci --reporters=default --coverage",
    "integ": "integ-runner",
    "integ-local": "npm run build && integ-runner",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@aws-cdk/integ-runner": "^2.55.1",
    "@aws-cdk/integ-tests-alpha": "^2.55.1-alpha.0",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.15",
    "aws-sdk": "^2.1282.0",
    "constructs": "^10.0.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^29.3.1",
    "semantic-release": "^20.1.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">= 16.15.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.55.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
